
{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-7105540e",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "packer-demo {{timestamp}}"
  },
    {
      "type": "googlecompute",
      "project_id": "my project",
      "machine_type": "n1-standard-1",
      "source_image": "centos-8-v20200205",
      "region": "us-west1",
      "zone": "us-west1-b",
      "ssh_username": "packer"
    }],
  "provisioners": [
	{
            "type": "file",
            "source": "./demo.txt",
            "destination": "/home/ec2-user/"
        },
	{
            "type": "shell",
            "inline":[
                "ls -al /home/ec2-user",
                "cat /home/ec2-user/demo.txt"
            ]
        },
        {
            "type": "shell",
            "inline":[
		"echo Ansible and associated dependencies will be istalled onto the ami",    
                "sudo amazon-linux-extras install ansible2",
		"ansible --version"
            ]
        },
	{
  	    "type": "ansible-local",
	    "playbook_file": "play.yml"
	}
    ]
}
